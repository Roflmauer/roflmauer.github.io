    <script>
        // Set Chart.js Global Defaults
        Chart.defaults.font.family = 'Montserrat';
        Chart.defaults.color = '#a0aec0'; // Default text color for charts
        Chart.defaults.borderColor = '#4a5568'; // Default border color for chart elements

        // --- Helper Functions ---
        function formatLargeNumber(value) {
            if (value >= 1e9) return (value / 1e9).toFixed(1) + 'B';
            if (value >= 1e6) return (value / 1e6).toFixed(1) + 'M';
            if (value >= 1e3) return (value / 1e3).toFixed(1) + 'K';
            return value.toString();
        }

        // --- Data (Using placeholders, replace with actual fetched data) ---
        const airlineData = {
            cal: {
                revenue2024: 174.4, // Billion NT$ (Op Rev from slides)
                passengers2024: null, // Placeholder, as specific number wasn't easily found for comparison
                fleetSize: 83
            },
            eva: {
                revenue2024: 206.6, // Billion NT$
                passengers2024: 13.16, // Million
                fleetSize: 87
            },
            sjx: {
                revenue2024: 35.55, // Billion NT$
                passengers2024: 4.10, // Million (Approx sum of quarters)
                fleetSize: 21 // Approx current, target 50+
            }
        };

        // --- Render Charts ---
        // 1. 2024 Revenue Chart
        const revCtx = document.getElementById('revenueChart2024');
        if (revCtx) {
            new Chart(revCtx, {
                type: 'bar',
                data: {
                    labels: ['China Airlines', 'EVA Air', 'Starlux Airlines'],
                    datasets: [{
                        label: '2024 Operating Revenue (NT$ Billion)',
                        data: [airlineData.cal.revenue2024, airlineData.eva.revenue2024, airlineData.sjx.revenue2024],
                        backgroundColor: [
                            'rgba(54, 162, 235, 0.7)', // Blue for CAL
                            'rgba(75, 192, 192, 0.7)', // Green for EVA
                            'rgba(153, 102, 255, 0.7)'  // Purple for Starlux
                        ],
                        borderColor: [
                            'rgba(54, 162, 235, 1)',
                            'rgba(75, 192, 192, 1)',
                            'rgba(153, 102, 255, 1)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: true,
                    indexAxis: 'y', // Horizontal bar chart
                    scales: {
                        x: {
                            beginAtZero: true,
                            title: { display: true, text: 'NT$ Billion', color: '#c9d1d9' },
                            ticks: { color: '#8b949e' },
                            grid: { color: '#30363d' }
                        },
                        y: {
                            ticks: { color: '#8b949e' },
                            grid: { display: false }
                        }
                    },
                    plugins: {
                        legend: { display: false },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    return context.dataset.label + ': ' + context.parsed.x.toFixed(2) + ' Billion NT$';
                                }
                            }
                        }
                    }
                }
            });
        } else { console.error("Revenue chart canvas not found"); }

        // 2. Fleet Size Chart
        const fleetCtx = document.getElementById('fleetSizeChart');
        if (fleetCtx) {
            new Chart(fleetCtx, {
                type: 'bar',
                data: {
                    labels: ['China Airlines', 'EVA Air', 'Starlux Airlines'],
                    datasets: [{
                        label: 'Approximate Fleet Size (Early 2025)',
                        data: [airlineData.cal.fleetSize, airlineData.eva.fleetSize, airlineData.sjx.fleetSize],
                         backgroundColor: [
                            'rgba(54, 162, 235, 0.7)',
                            'rgba(75, 192, 192, 0.7)',
                            'rgba(153, 102, 255, 0.7)'
                        ],
                        borderColor: [
                            'rgba(54, 162, 235, 1)',
                            'rgba(75, 192, 192, 1)',
                            'rgba(153, 102, 255, 1)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: true,
                    scales: {
                        y: {
                            beginAtZero: true,
                            title: { display: true, text: 'Number of Aircraft', color: '#c9d1d9' },
                            ticks: { color: '#8b949e' },
                            grid: { color: '#30363d' }
                        },
                         x: {
                            ticks: { color: '#8b949e' },
                            grid: { display: false }
                        }
                    },
                    plugins: {
                        legend: { display: false },
                         tooltip: {
                            callbacks: {
                                label: function(context) {
                                    return context.dataset.label + ': ' + context.parsed.y;
                                }
                            }
                        }
                    }
                }
            });
        } else { console.error("Fleet size chart canvas not found"); }

        // 3. 2024 Passengers Carried Chart
        const passengersCtx = document.getElementById('passengersChart2024');
        if (passengersCtx) {
            new Chart(passengersCtx, {
                type: 'bar',
                data: {
                    labels: ['EVA Air', 'Starlux Airlines (*CAL N/A)'], // CAL data was not readily comparable for this viz
                    datasets: [{
                        label: '2024 Passengers Carried (Millions)',
                        data: [airlineData.eva.passengers2024, airlineData.sjx.passengers2024],
                         backgroundColor: [
                            // 'rgba(54, 162, 235, 0.7)', // CAL color if data was available
                            'rgba(75, 192, 192, 0.7)',
                            'rgba(153, 102, 255, 0.7)'
                        ],
                        borderColor: [
                            // 'rgba(54, 162, 235, 1)',
                            'rgba(75, 192, 192, 1)',
                            'rgba(153, 102, 255, 1)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: true,
                    scales: {
                        y: {
                            beginAtZero: true,
                            title: { display: true, text: 'Passengers (Millions)', color: '#c9d1d9' },
                            ticks: { color: '#8b949e' },
                            grid: { color: '#30363d' }
                        },
                         x: {
                            ticks: { color: '#8b949e' },
                            grid: { display: false }
                        }
                    },
                    plugins: {
                        legend: { display: false },
                         tooltip: {
                            callbacks: {
                                label: function(context) {
                                    return context.label + ': ' + context.parsed.y.toFixed(2) + ' Million';
                                }
                            }
                        }
                    }
                }
            });
        } else { console.error("Passengers chart canvas not found"); }


